@model IEnumerable<InAndOut.Models.Expenses>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary">Create a new expense</a>
        </div>
    </div>
</div>
<br/>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <th>
                Expenses Name
            </th>
            <th>
                Amount
            </th>
        </thead>
        <tbody>
            @foreach (var expenses in Model)
            {
                <tr>
                    <td width="30%">@expenses.ExpensesName</td>
                    <td width="30%">@expenses.Amount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Expenses Registred Yet!</p>
}